.currt{ background: #ffb03b}
.type-bg{background: #4ad9d9; padding-top: 0.5rem;  padding-bottom: 0.8rem;}
.type{display: inline-block; width: 65%;  margin-left:10%; border: 1px solid #333; color: #333; border-right: none; }
.type label{ display: inline-block; background: #fff;  width: 49%; text-align: center;line-height: 2rem; border-right: 1px solid #333;}
.type .currt{background: #ffb03b; width: 50%; }

.btn-code{ display: inline-block;  color :#333;  margin-left: 5%; text-align: center; vertical-align: middle;}
.btn-code image{ width: 22px; height: 22px; display: block;margin: 0 auto; }

.ico {margin-top: 0.5rem; }
.ico label{ display: inline-block; width: 20%; text-align: center; font-size: 0.6rem; margin-top: 0.2rem; margin-bottom: 0.2rem;}
.ico label image{ width: 32px; height: 32px; display: block; margin: 0 auto; margin-bottom: 0.2rem; padding: 2px;}
.ico label .hot{ background: #ffb03b; border-radius: 20px; }

.picker{ float: left; width: 4.5rem;}
.money{  width: 95%;  border-top: 1px solid #333; border-bottom: 1px solid #333; line-height: 2rem; position: fixed; bottom: 350rpx; margin-left:3%; margin-bottom: 1rem;  }
.money .account{ display: block; float: right; text-align: right; width: 70%; overflow: hidden;}

.keyboard{ position: fixed; bottom: 1px; width: 100%;}
.btnGroup{display:flex;flex-direction:row;}
.btnGroup .item{ width:25%; min-height:5rpx;text-shadow:0 1px 1px rgba(0,0,0,.3);text-align:center;line-height:70rpx;display:inline-block;}
.btnGroup .orange{color:#fef4e9;border:solid 1px #da7c0c;background:#f78d1d;}
.btnGroup .blue{color:#d9eef7;border:solid 1px #0076a3;background:#0095cd;}
.btnGroup .item:hover{ background:#ffb03b; }
